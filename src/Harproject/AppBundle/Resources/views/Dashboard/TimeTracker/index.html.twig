{% extends 'dashboard.html.twig' %}

{% block body_title %}TimeTracker{% endblock %}
{% block body %}
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <i class="fa fa-clock-o fa-fw"></i>

                    {% if app.user|hasRole("TIMETRACKER_ADD", app.session.get("project_id")) %}
                        <div class="btn-group pull-right">
                            <button type="button" class="btn btn-default btn-xs dropdown-toggle" data-toggle="dropdown">
                                <i class="fa fa-chevron-down"></i>
                            </button>
                            <ul class="dropdown-menu slidedown">
                                <li>
                                    <a href="{{ path("harproject_app_dashboard_timetracker_new") }}"><i class="fa fa-plus fa-fw"></i> New timetracker</a>
                                </li>
                            </ul>
                        </div>
                    {% endif %}
                </div>
                <div class="panel-body">
                    <div class="dataTable_wrapper">
                        <table id="search-list" class="table table-striped table-bordered table-hover">
                            <thead>
                                <tr>
                                    <th>Id</th>
                                    <th>Comment</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for entity in entities %}
                                <tr>
                                    <td>{{ entity.id }}</td>
                                    <td>{{ entity.comment }}</td>
                                    <td>
                                        {% if app.user|hasRole("TIMETRACKER_VIEW", app.session.get("project_id")) %}
                                            <a class="btn btn-default" href="{{ path('harproject_app_dashboard_timetracker_show', { 'id': entity.id }) }}"><i class="fa fa-eye fa-fw"></i></a>
                                        {% endif %}
                                        {% if app.user|hasRole("TIMETRACKER_EDIT", app.session.get("project_id")) %}
                                            <a class="btn btn-outline btn-primary" href="{{ path('harproject_app_dashboard_timetracker_edit', { 'id': entity.id }) }}"><i class="fa fa-trash fa-fw"></i></a>
                                        {% endif %}
                                        {% if app.user|hasRole("TIMETRACKER_DELETE", app.session.get("project_id")) %}
                                            <a class="btn btn-outline btn-danger" href="{{ path('harproject_app_dashboard_timetracker_delete', { 'id': entity.id }) }}"><i class="fa fa-trash fa-fw"></i></a>
                                        {% endif %}
                                    </td>
                                </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
{% block javascripts %}
<script>
    $(document).ready(function() {
        $('#search-list').DataTable({
            responsive: true, 
            pageLength: 50
        });
    });
</script>
{% endblock %}