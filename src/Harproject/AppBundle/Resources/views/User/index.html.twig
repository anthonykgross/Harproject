{% extends 'dashboard.html.twig' %}

{% block body_title %}User{% endblock %}
{% block body %}
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <i class="fa fa-user fa-fw"></i>
                </div>
                <div class="panel-body">
                    <div class="dataTable_wrapper">
                        <table id="search-list" class="table table-striped table-bordered table-hover">
                            <thead>
                                <tr>
                                    <th>Id</th>
                                    <th>Email</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for entity in entities %}
                                <tr>
                                    <td><a href="{{ path('harproject_app_user_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                                    <td>{{ entity.email }}</td>
                                    <td>
                                        <a class="btn btn-default" href="{{ path('harproject_app_user_show', { 'id': entity.id }) }}"><i class="fa fa-eye fa-fw"></i></a>
                                        <a class="btn btn-outline btn-danger" href="{{ path('harproject_app_user_delete', { 'id': entity.id }) }}"><i class="fa fa-trash fa-fw"></i></a>
                                    </td>
                                </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
{% block javascripts %}
<script>
    $(document).ready(function() {
        $('#search-list').DataTable({
            responsive: true, 
            pageLength: 50
        });
    });
</script>
{% endblock %}