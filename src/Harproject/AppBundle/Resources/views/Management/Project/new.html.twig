{% extends 'dashboard.html.twig' %}

{% block body_title %}Project{% endblock %}
{% block body %}
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <i class="fa fa-list-ul fa-fw"></i>

                <div class="btn-group pull-right">
                    <button type="button" class="btn btn-default btn-xs dropdown-toggle" data-toggle="dropdown">
                        <i class="fa fa-chevron-down"></i>
                    </button>
                    <ul class="dropdown-menu slidedown">
                        <li>
                            <a href="{{ path("harproject_app_management_project") }}"><i class="fa fa-list-ul fa-fw"></i> Project</a>
                        </li>
                    </ul>
                </div>
            </div>
            <div class="panel-body">
                <form action="{{ path('harproject_app_management_project_create') }}" {{ form_enctype(form) }} method="POST">
                    <fieldset>
                        <div class="form-group">
                            {{ form_label(form.name) }}
                            {{ form_widget(form.name, { 'attr': {'class': 'form-control'} }) }}
                            {% if form.name.vars.errors|length %}<div class="alert alert-danger">{{ form_errors(form.name)}}</div>{% endif %}
                        </div>
                        <div class="form-group">
                            {{ form_label(form.description) }}
                            {{ form_widget(form.description, { 'attr': {'class': 'form-control'} }) }}
                            {% if form.description.vars.errors|length %}<div class="alert alert-danger">{{ form_errors(form.description)}}</div>{% endif %}
                        </div>
                        <div class="form-group">
                            {{ form_label(form.site_url) }}
                            {{ form_widget(form.site_url, { 'attr': {'class': 'form-control'} }) }}
                            {% if form.site_url.vars.errors|length %}<div class="alert alert-danger">{{ form_errors(form.site_url)}}</div>{% endif %}
                        </div>
                        <div class="form-group">
                            {{ form_label(form.git) }}
                            {{ form_widget(form.git, { 'attr': {'class': 'form-control'} }) }}
                            {% if form.git.vars.errors|length %}<div class="alert alert-danger">{{ form_errors(form.git)}}</div>{% endif %}
                        </div>
                        <div class="form-group">
                            {{ form_label(form.svn) }}
                            {{ form_widget(form.svn, { 'attr': {'class': 'form-control'} }) }}
                            {% if form.svn.vars.errors|length %}<div class="alert alert-danger">{{ form_errors(form.svn)}}</div>{% endif %}
                        </div>
                    </fieldset>
                    {{ form_widget(form._token) }}
                    <div>
                        <input type="submit" class="btn btn-lg btn-success btn-block" value="Create" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
                        
{% endblock %}
