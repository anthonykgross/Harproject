{% extends 'dashboard.html.twig' %}

{% block body_title %}Group{% endblock %}
{% block body %}
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <i class="fa fa-group fa-fw"></i>

                <div class="btn-group pull-right">
                    <button type="button" class="btn btn-default btn-xs dropdown-toggle" data-toggle="dropdown">
                        <i class="fa fa-chevron-down"></i>
                    </button>
                    <ul class="dropdown-menu slidedown">
                        <li>
                            <a href="{{ path("harproject_app_group") }}"><i class="fa fa-group fa-fw"></i> Group</a>
                        </li>
                        <li>
                            <a href="{{ path("harproject_app_group_new") }}"><i class="fa fa-plus fa-fw"></i> New group</a>
                        </li>
                        <li>
                            <a href="{{ path("harproject_app_group_edit" , {"id": entity.id}) }}"><i class="fa fa-edit fa-fw"></i> Edit</a>
                        </li>
                        <li>
                            <a href="{{ path("harproject_app_group_delete" , {"id": entity.id}) }}"><i class="fa fa-trash fa-fw"></i> Delete</a>
                        </li>
                    </ul>
                </div>
            </div>
            <div class="panel-body">
                <div class="col-lg-12">
                    <div class="col-lg-2">Label</div>
                    <div class="col-lg-10">{{ entity.label }}</div>
                </div>
                <div class="col-lg-12">
                    <div class="col-lg-2">Created at</div>
                    <div class="col-lg-10">{{ entity.createdAt | date ('d/m/Y') }}</div>
                </div>
                <div class="col-lg-12">
                    <div class="col-lg-2">Roles</div>
                    <div class="col-lg-10">
                        <ul>
                            {% for r in entity.roles %}
                                <li>{{ r }}</li>
                            {% endfor %}
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
                       
{% endblock %}
