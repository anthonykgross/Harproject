{% extends 'dashboard.html.twig' %}

{% block body_title %}Group{% endblock %}
{% block body %}
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <i class="fa fa-group fa-fw"></i>

                <div class="btn-group pull-right">
                    <button type="button" class="btn btn-default btn-xs dropdown-toggle" data-toggle="dropdown">
                        <i class="fa fa-chevron-down"></i>
                    </button>
                    <ul class="dropdown-menu slidedown">
                        <li>
                            <a href="{{ path("harproject_app_group") }}"><i class="fa fa-list-ul fa-fw"></i> Group</a>
                        </li>
                    </ul>
                </div>
            </div>
            <div class="panel-body">
                <form action="{{ path('harproject_app_group_create') }}" {{ form_enctype(form) }} method="POST">
                    <fieldset>
                        <div class="form-group">
                            {{ form_label(form.label) }}
                            {{ form_widget(form.label, { 'attr': {'class': 'form-control'} }) }}
                            {% if form.label.vars.errors|length %}<div class="alert alert-danger">{{ form_errors(form.label)}}</div>{% endif %}
                        </div>
                        <div class="form-group">
                            {{ form_label(form.roles) }}
                            {% for r in form.roles %}
                                <div class="checkbox">
                                    <label>
                                        {{ form_widget(r) }}{{ form_label(r) }}
                                    </label>
                                </div>
                            {% endfor %}
                            {% if form.roles.vars.errors|length %}<div class="alert alert-danger">{{ form_errors(form.roles)}}</div>{% endif %}
                        </div>
                    </fieldset>
                    {{ form_widget(form._token) }}
                    <div>
                        <input type="submit" class="btn btn-lg btn-success btn-block" value="Create" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
                        
{% endblock %}
